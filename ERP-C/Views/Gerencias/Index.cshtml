@model IEnumerable<ERP_C.Models.Gerencia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.IsInRole("RRHH"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsGerenciaGeneral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GerenciaSuperior)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Responsable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsGerenciaGeneral)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GerenciaSuperior.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsable.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.EmailContacto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Organigrama">Organigrama</a>
</div>
