@model ERP_C.Models.ViewModels.Organigrama

@{
    ViewData["Title"] = "Organigrama";
}

<h1>Organigrama</h1>

<div>
    <h4>Gerencia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EsGerenciaGeneral)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsGerenciaGeneral)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Responsable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Responsable.Empleado.Nombre)
        </dd>


    </dl>
</div>
    
        
   
        @if (Model.GerenciasInferiores.Any()){

    <table class="table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Responsable)
                </th>
                <th>
                    Organigrama
                </th>
            </tr>
        </thead>
           @foreach(var item in Model.GerenciasInferiores)
           {
            <tr>
            <td>
                @Html.DisplayFor(Modelitem => item.Nombre)
           </td>
           <td>
                    @Html.DisplayFor(Modelitem => item.Responsable.Empleado.Nombre)
           </td>
                <td>
                    <a asp-action="Organigrama" asp-route-id="@item.Id">Organigrama</a> 
                </td> 
            </tr>
        }
    </table>
}
else
{
    <table class="table">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Empleados[0].Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleados[0].Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleados[0].NombrePosicion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleados[0].Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Empleados[0].Email)
                </th>
                @* <th>
                    Tarjeta de Contacto
                </th> *@
            </tr>
        </thead>
        @foreach (var item in Model.Empleados)
        {
           <tr>
                <td>
                    @Html.DisplayFor(Modelitem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.NombrePosicion)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.Telefono.Numero)
                </td>
                <td>
                    @Html.DisplayFor(Modelitem => item.Email)
                </td>
               @*  <td>
                    <a asp-action="Tarjeta" asp-route-id="@item.Posicion.Id">TarjetaContacto</a> 
                </td> *@
            </tr>
        }
    </table>
}
    

       

